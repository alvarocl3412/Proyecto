<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarVehiculo">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MostrarVehiculo">

        <!-- Toolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Contenido principal debajo del toolbar -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <!-- Foto vehiculo -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <ImageView
                android:layout_width="328dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!--Fecha inicio  -->
            <LinearLayout
                android:id="@+id/linearlayoutMos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Space
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtContratoFechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Fecha Inicio:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etxtContratoFechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="12-12-2000"
                    android:textSize="18sp"
                    android:focusable="false"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!--Fecha final  -->
            <LinearLayout
                android:id="@+id/linearlayoutMos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Space
                    android:layout_width="85dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtContratoFechaFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Fecha Final:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="53dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etxtContratoFechaFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="12-12-2000"
                    android:textSize="18sp"
                    android:focusable="false"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!-- Seguro  -->
            <LinearLayout
                android:id="@+id/linearlayoutMos3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Space
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtContratoSeguro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Seguro:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerContratoSeguro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="12-12-2000"
                    android:textSize="18sp" />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!-- Precio Dia  -->
            <LinearLayout
                android:id="@+id/linearlayoutMos4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Space
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtContratoPrecio_Dia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Precio Dia:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etxtContratoPrecioDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0€"
                    android:textSize="18sp"
                    android:focusable="false"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!-- Precio Final  -->
            <LinearLayout
                android:id="@+id/linearlayoutMos5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Space
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtContratoPrecioFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Precio Final:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etxtContratoPrecioFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0€"
                    android:textSize="18sp"
                    android:focusable="false"/>
                <ImageView
                    android:id="@+id/imgCalculator"
                    android:layout_width="57dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/calculadoranoche" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!-- Botones Aceptar, Cancelar  -->
            <LinearLayout
                android:id="@+id/linearlayoutMos6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnContratoCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Cancelar:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnContratar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contratar"
                    android:textSize="20sp" />
            </LinearLayout>



        </LinearLayout>

        <!-- Bottom Navigation Menu -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconSize="37sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Menu lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navegacion_drawer"
        app:itemIconSize="20dp"
        app:itemIconTint="@color/black"
        app:itemTextAppearance="@style/EstiloTextoNavegacionLateral"
        app:menu="@menu/navegacion_menu" />

</androidx.drawerlayout.widget.DrawerLayout>