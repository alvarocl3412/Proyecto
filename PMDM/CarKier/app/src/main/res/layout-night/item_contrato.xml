<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContrato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/darker_gray"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen a la izquierda -->
        <ImageView
            android:id="@+id/imgVehiculo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Imagen del vehículo"
            android:src="@drawable/contrato" />

        <!-- Contenedor para la información a la derecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Matricula -->
            <TextView
                android:id="@+id/txtMatricula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matrícula ABC123"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Fecha inicio -->
            <TextView
                android:id="@+id/txtFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha inicio 01/01/2024"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Fecha final -->
            <TextView
                android:id="@+id/txtFechaFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha final 07/01/2024"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Precio por día -->
            <TextView
                android:id="@+id/txtPrecioDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio/Día: $50"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Precio final -->
            <TextView
                android:id="@+id/txtPrecioFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio final: $350"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Pagado -->
            <TextView
                android:id="@+id/txtPagado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pagado: Sí"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <!-- Botón estado -->
            <Button
                android:id="@+id/btnEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Estado"
                android:backgroundTint="@color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:enabled="false"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="8sp"
                android:layout_height="wrap_content"
                />

            <!-- Botón Cancelar Contrato -->
            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cancelar"
                android:backgroundTint="@color/black"

                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
