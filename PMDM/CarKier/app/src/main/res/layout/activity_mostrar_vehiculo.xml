<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MostrarVehiculo">

    <!-- Toolbar -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10sp"
            android:paddingLeft="2dp">

        <LinearLayout
            android:id="@+id/linearlayoutMos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <ImageButton
                android:id="@+id/imgVehiucloMostrar"
                android:layout_width="215dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/ajustes" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingLeft="2dp">

            <TextView
                android:id="@+id/txtMostrarPertenece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pertenece a:"
                android:textSize="20sp"
                android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/txtMostrarEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado:"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/txtMostrarMatricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Matricula:"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/txtMostrarMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marca:"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/txtMostrarModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modelo:"
                    android:textSize="18sp"
                    android:paddingLeft="2dp"/>
                <TextView
                    android:id="@+id/txtMostrarAnio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AÃ±o:"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>
                <TextView
                    android:id="@+id/txtMostrarKM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kilometros:"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>
                <TextView
                    android:id="@+id/txtMostrarPrecioDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio/Dia:"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>
                <TextView
                    android:id="@+id/txtMostrarPrecioVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Mostrar_precio_venta"
                    android:textSize="20sp"
                    android:paddingLeft="2dp"/>
        </LinearLayout>



        </LinearLayout>
            <!--Poner debajo de las especificaciones del coche-->

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Mostrar_contrtar_servicios"
                android:textSize="20sp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/txtComent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMENTARIOS"
                android:textSize="29sp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"/>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleComentario"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>






    </ScrollView>

    <!-- Bottom Navigation Menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconSize="37sp"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
