<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_dynamic_secondary90"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- Sección para mostrar el usuario y la fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <!-- Nombre del Usuario -->
        <TextView
            android:id="@+id/txtRespUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Fecha del comentario -->
        <TextView
            android:id="@+id/txtRespFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Descripción del comentario -->
    <TextView
        android:id="@+id/txtResDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Descripción del comentario."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/morado_logo" />
</LinearLayout>